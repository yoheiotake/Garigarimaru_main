<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/button_graphstep_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/out_weight" />

    <Button
        android:id="@+id/button_graphstep_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_graphstep_weight"
        android:layout_alignBottom="@+id/button_graphstep_weight"
        android:layout_centerHorizontal="true"
        android:text="@string/out_calorie" />

    <Button
        android:id="@+id/button_graphstep_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_graphstep_calorie"
        android:layout_alignBottom="@+id/button_graphstep_calorie"
        android:layout_alignParentRight="true"
        android:text="@string/out_step" />

    <Button
        android:id="@+id/button_graphstep_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/out_back" />

    <TextView
        android:id="@+id/textView_grapstep_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_graphstep_weight"
        android:layout_below="@+id/button_graphstep_weight"
        android:layout_marginTop="20dp"
        android:text="@string/out_comment" />

    <TextView
        android:id="@+id/textView_graphstep_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_grapstep_comment"
        android:layout_alignBottom="@+id/textView_grapstep_comment"
        android:layout_toRightOf="@+id/textView_grapstep_comment"
        android:text="@string/comment_step" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_graphstep_comment_text"
        android:layout_marginTop="31dp"
        android:layout_toLeftOf="@+id/button_graphstep_step"
        android:layout_toRightOf="@+id/button_graphstep_weight" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/textView_grapstep_comment"
        android:layout_below="@+id/spinner3"
        android:layout_marginTop="24dp" >

        <TableLayout
            android:id="@+id/table_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TableLayout>
    </ScrollView>

    <RelativeLayout
	android:id="@+id/chart3" 
	android:orientation="horizontal" 
	android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_marginBottom="40dp"
    android:layout_height="350dp"/>
    
</RelativeLayout>